
<%= render 'shared/errors', obj: @users %>
<div class ="container form">
<div class='row'>

<div class='col-xs-8'>

<%= form_for(@users, :html => {class: "form-horizontal", role: "form"}) do |f| %>

<div class="form-group">

<div class="control-label col-sm-2">

<%= f.label :UserName %>

</div>

<div class="col-sm-8">

<%= f.text_field :username, class: "form-control", placeholder: "Enter the User", autofocus: true %>

</div>

</div>

 <div class ="form-group">
 	<div class ="control-label col-sm-2">
 		<%= f.label :email %>
 	</div>
 	<div class ="col-sm-8">
 		<%= f.email_field :email,class:"form-control",placeholder:"Enter the email"%>
 	</div>
 </div>

 <div class ="form-group">
 	<div class ="control-label col-sm-2">
 		<%= f.label :Password	 %>
 	</div>
 	<div class ="col-sm-8">
 		<%= f.password_field :password,class:"form-control",placeholder:"Enter the Password"%>
 	</div>
 </div>


<div class="form-group">

<div class="col-sm-offset-2 col-sm-10">

<%= f.submit(@users.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %>

</div>

</div>

<% end %>

<div class="col-xs-6 col-xs-offset-4">

[ <%= link_to "Cancel request and return to Movies ", films_path %> ]

</div>

</div>

</div>
</div>