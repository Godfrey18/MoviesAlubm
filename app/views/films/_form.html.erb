
<%= render 'shared/errors',obj: @films %>

<div class ="container">
<h1 align="center"> Add Films To List</h1>

</div>

<div class ="container form">
<div class='row'>

<div class='col-xs-8'>

<%= form_for(@films, :html => {class: "form-horizontal", role: "form"}) do |f| %>

<div class="form-group">

<div class="control-label col-sm-2">

<%= f.label :name %>

</div>

<div class="col-sm-8">

<%= f.text_field :name, class: "form-control", placeholder: "Title of article", autofocus: true %>

</div>

</div>

<div class="form-group">

<div class="control-label col-sm-2">

<%= f.label :Genere %>

</div>

<div class="col-sm-8">

<%= f.text_field :genere,  class: "form-control", placeholder: "Body of article" %>

</div>

</div>

<div class="form-group">

<div class="control-label col-sm-2">

<%= f.label :Langauage %>

</div>

<div class="col-sm-8">

<%= f.text_field :langauge,  class: "form-control", placeholder: "Body of article" %>

</div>

</div>

<div class="form-group">

<div class="col-sm-offset-2 col-sm-10">

<%= f.submit class: 'btn btn-primary btn-lg' %>

</div>

</div>

<% end %>

<div class="col-xs-6 col-xs-offset-4">

[ <%= link_to "Cancel request and return to Movies ", films_path %> ]

</div>

</div>

</div>
</div>