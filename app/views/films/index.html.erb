
<h1>List of all The movies</h1>

<p>
	<%=link_to 'Add a Film',new_film_path%>
</p>

<table>
<tr>
	<th>MovieName:</th>
		<th> Genere</th>
		<th>Langauage</th>
</tr>

<%@films.each do |film|%>

<tr>
	<td><%=film.name%></td>
	<td><%=film.genere%></td>
	<td><%=film.langauge%></td>
	<td><%= link_to 'Edit',edit_film_path(film)%></td>
	<td><%= link_to 'Show',film_path(film)%></td>
	<td><%= link_to 'Delete', film_path(film), method: :delete, data: {confirm: "Are you sure?"} %></td>
</tr>
<% end %>

	
	</table>